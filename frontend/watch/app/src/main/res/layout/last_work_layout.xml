<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BLACK">

    <ImageView
        android:id="@+id/workImageView"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:contentDescription="@string/Lock"
        android:src="@drawable/img_lock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.318" />

    <TextView
        android:id="@+id/workTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Lock"
        android:textColor="@color/SNOW"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@id/workImageView"
        app:layout_constraintRight_toRightOf="@id/workImageView"
        app:layout_constraintTop_toBottomOf="@id/workImageView" />

    <ImageView
        android:id="@+id/slideLeftIcon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="4dp"
        android:contentDescription="@string/left"
        android:src="@drawable/img_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
